@model Surf_blog.Models.DBModels.User
@{
    ViewBag.Title = "Index";
}


<div class="col-sm-5 col-sm-offset-4">
    <div class="panel panel-info">
        <div class="panel-heading">
            Регистрация нового пользователя
        </div>

        <div class="panel-body">
            <div>
                @using (Html.BeginForm("Register", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <form>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nickname)
                            @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control", title = "от 3 до 20 символов. Латиница, кириллица, цифры и подчеркивания" } })
                            @Html.ValidationMessageFor(model => model.Nickname)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email)
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control ", title = "Пример: ex@example.ex", width = "100" } })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password)
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", title = "от 6 до 20 символов. Латиница, кириллица, цифры и подчеркивания", type = "Password" } })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PasswordConfirm)
                            @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", title = "от 6 до 20 символов", type = "Password" } })
                            @Html.ValidationMessageFor(model => model.PasswordConfirm)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LastName)
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", title = "" } })
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name)
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", title = "" } })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Photo)
                            <input name="imageData" type="file" accept="image/jpeg" />
                        </div>
             
                <div class="col-lg-6">
                    <img src="~/Content/Images/Uploads/KFC.jpg" width="280" />
                </div>
   
                <div class="form-group">
                    @Html.LabelFor(model => model.ContactInfo)
                    @Html.TextAreaFor(model => model.ContactInfo, 10, 100, new { htmlAttributes = new { @class = "form-control add-post-area" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.About)
                    @Html.TextAreaFor(model => model.About, 10, 100, new { htmlAttributes = new { @class = "form-control add-post-area" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Progress)
                    @Html.TextAreaFor(model => model.Progress, 10, 100, new { htmlAttributes = new { @class = "form-control add-post-area" } })
                </div>
                <div class="form-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn pull-left">Зарегистрироваться</button>
                </div>
            
                </form>

            }
                </>
            </div>
        </div>
</div>
